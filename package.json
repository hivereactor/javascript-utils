{
  "name": "@hivereactor/utils",
  "version": "2.1.2",
  "description": "Utility functions for your JavaScript project.",
  "main": "lib/cjs/index.js",
  "module": "lib/es/index.js",
  "types": "lib/types/index.d.ts",
  "scripts": {
    "build": "npm run build:cjs && npm run build:es",
    "build:cjs": "tsc -d --declarationDir lib/types/",
    "build:es": "tsc --module ES6 --outDir lib/es/",
    "prebuild": "rm -rf lib/",
    "prepublishOnly": "npm run build",
    "test": "nyc mocha --compilers ts-node/register --recursive --reporter progress test/**/*.test.ts"
  },
  "directories": {
    "doc": "docs",
    "lib": "lib",
    "test": "test"
  },
  "files": [
    "lib/"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/hivereactor/javascript-utils.git"
  },
  "author": {
    "name": "Hivereactor",
    "email": "hello@hivereactor.com",
    "url": "https://hivereactor.com"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/hivereactor/javascript-utils/issues"
  },
  "homepage": "https://github.com/hivereactor/javascript-utils#readme",
  "devDependencies": {
    "@types/mocha": "^2.2.41",
    "@types/node": "^8.0.7",
    "escape-string-regexp": "^1.0.5",
    "mocha": "^3.4.2",
    "nyc": "^11.0.3",
    "source-map-support": "^0.4.15",
    "ts-node": "^3.2.0",
    "typescript": "^2.4.1"
  },
  "nyc": {
    "exclude": [
      "test/**/*",
      "**/*.d.ts"
    ],
    "extension": [
      ".ts",
      ".tsx"
    ],
    "reporter": "lcov",
    "require": [
      "ts-node/register"
    ]
  }
}
