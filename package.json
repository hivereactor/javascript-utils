{
  "name": "@hivereactor/utils",
  "version": "2.1.0",
  "description": "Utility functions for your JavaScript project.",
  "main": "lib/cjs/index.js",
  "module": "lib/es/index.js",
  "directories": {
    "doc": "docs",
    "lib": "lib",
    "test": "tests"
  },
  "files": [
    "lib/",
    ".flowconfig"
  ],
  "dependencies": {
    "r": "0.0.5"
  },
  "devDependencies": {
    "@types/chai": "^4.0.1",
    "@types/mocha": "^2.2.41",
    "ava": "^0.20.0",
    "nyc": "^11.0.3",
    "typescript": "^2.4.1"
  },
  "scripts": {
    "build": "npm run build:cjs && npm run build:es",
    "build:cjs": "tsc -d --declarationDir lib/types/",
    "build:es": "tsc --module ES6 --outDir lib/es/",
    "prebuild": "rm -rf lib/",
    "prepublishOnly": "npm run build",
    "pretest": "npm run build:cjs",
    "test": "nyc ava"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/hivereactor/javascript-utils.git"
  },
  "author": "Hivereactor (https://hivereactor.com) <hello@hivereactor.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/hivereactor/javascript-utils/issues"
  },
  "homepage": "https://github.com/hivereactor/javascript-utils#readme",
  "babel": {
    "env": {
      "test": {
        "plugins": [
          "transform-es2015-modules-commonjs"
        ]
      }
    },
    "plugins": [
      "transform-flow-strip-types"
    ],
    "presets": [
      [
        "env",
        {
          "modules": false,
          "targets": {
            "browsers": [
              "ie >= 9",
              "last 2 versions"
            ],
            "node": 4
          }
        }
      ]
    ]
  },
  "nyc": {
    "exclude": [
      "test/**/*"
    ],
    "reporter": "lcov"
  }
}
